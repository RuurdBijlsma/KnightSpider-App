<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="nl.nhl.knightspider.MainActivity">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/spider_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="1"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="4dp"
                    app:contentPadding="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/servo_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Spinfo hahahah"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/servo_temp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Temperatuur 30°" />

                        <TextView
                            android:id="@+id/servo_angle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hoek 49°" />

                        <TextView
                            android:id="@+id/servo_load"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Belasting 39g" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/live_stream_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="1">

            <WebView
                android:id="@+id/stream_viewer"
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:visibility="visible">

            </WebView>

            <WebView
                android:id="@+id/blog_viewer"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/diagnostics_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ScrollView>
    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation" />

</LinearLayout>
